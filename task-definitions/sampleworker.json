{
  "family": "email-platform-dev-sampleworker",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "sampleworker",
      "image": "${IMAGE_URI}",
      "essential": true,
      "environment": [
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "WORKER_INTERVAL",
          "value": "10s"
        },
        {
          "name": "ENVIRONMENT",
          "value": "dev"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY",
          "valueFrom": "${SECRET_ARN}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${LOG_GROUP}",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "sampleworker"
        }
      }
    }
  ],
  "tags": [
    {
      "key": "Environment",
      "value": "dev"
    },
    {
      "key": "Service",
      "value": "sampleworker"
    }
  ]
}

